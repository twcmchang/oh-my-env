{
    // for visual studio code
    "editor.formatOnSave": true,
    "window.zoomLevel": 0,
    "python.dataScience.sendSelectionToInteractiveWindow": false,
    "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "files.autoSave": "onFocusChange",
    "editor.wordWrap": "on",
    "editor.fontSize": 13,
    "workbench.sideBar.location": "left",
    "editor.fontFamily": "Monaco",
    "C_Cpp.clang_format_sortIncludes": true,
    "syntax.highlightTerms": [
        "type",
        "scope",
        "function",
        "variable",
        "number",
        "string",
        "comment",
        "constant",
        "directive",
        "control",
        "operator",
        "modifier",
        "punctuation"
    ],
    "syntax.highlightLanguages": [
        "c",
        "cpp",
        "python",
        "typescript",
        "typescriptreact",
        "javascript",
        "go",
        "rust",
        "php",
        "ruby",
        "shellscript",
        "ocaml",
        "lua"
    ],
    "workbench.colorTheme": "Monokai Dimmed",
    "workbench.colorCustomizations": {
        "[Monokai Dimmed]": {
            "syntax.type": "#b3de69",
            "syntax.scope": "#fdb462",
            "syntax.function": "#80b1d3",
            "syntax.variable": "#8dd3c7",
            "syntax.number": "#fdb462",
            "syntax.string": "#fb8072",
            "syntax.comment": "#999a9b",
            "syntax.constant": "#ffed6f",
            "syntax.directive": "#bc80bd",
            "syntax.control": "#80b1d3",
            "syntax.operator": "#eeeeee",
            "syntax.modifier": "#fb8072",
            "syntax.punctuation": "#eeeeee",
        }
    },
}
